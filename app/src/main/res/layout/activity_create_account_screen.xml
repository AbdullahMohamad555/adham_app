<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateAccount_Screen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_create_arrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:drawableLeft="@drawable/arrow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:gravity="center"
                android:text="Create Account"
                android:textColor="@color/purple_700"
                android:textSize="60sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextColor="#651FFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_createAccount_fullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:drawableRight="@drawable/user_card"
                    android:drawablePadding="10dp"
                    android:hint="full name"
                    android:inputType="text"
                    android:textSize="18sp"
                    android:tooltipText="Name" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextColor="#651FFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_createAccount_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:drawableRight="@drawable/mobile"
                    android:drawablePadding="10dp"
                    android:hint="phone number"
                    android:inputType="number"
                    android:textSize="18sp"
                    android:tooltipText="Name" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextColor="#651FFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_createAccount_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:drawableRight="@drawable/message"
                    android:drawablePadding="10dp"
                    android:hint="email"
                    android:inputType="textWebEmailAddress"
                    android:textSize="18sp"
                    android:tooltipText="Name" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:errorTextColor="#651FFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_createAccount_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:drawableRight="@drawable/lock"
                    android:drawablePadding="10dp"
                    android:hint="password"
                    android:inputType="textPassword"
                    android:textSize="18sp"
                    android:tooltipText="Name" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextColor="#651FFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_createAccount_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:drawableRight="@drawable/home"
                    android:drawablePadding="10dp"
                    android:hint="address"
                    android:inputType="textAutoCorrect"
                    android:textSize="18sp"
                    android:tooltipText="Name" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_createAccount_register"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/shapes"
                android:text="Register"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>